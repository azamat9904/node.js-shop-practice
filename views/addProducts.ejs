<%- include('includes/head') %>
<link rel="stylesheet" href="/css/addProducts.css">
</head>
<body>
    <%- include('includes/navigation') %>
    <main>
        <h3 class="title">Add Product</h3>
        <form action="/products/add-product" method="POST" class="form">
            <div class="form__container">
                <div class="form__group">
                    <input type="text" placeholder="Enter product name" name="name" class="form__control"/>
                </div>
                <div class="form__group">
                    <input type="text" placeholder="Enter product image" name="image" class="form__control"/>
                </div>
                <button type="submit" class="form__btn">Add Product</button>
            </div>
        </form>
    </main>
<%- include('includes/end')%>